<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/l1_mainactivity">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Valid Username"
            android:inputType="text"
            android:textSize="20dp"
            android:layout_marginVertical="40dp"
            android:id="@+id/et_un_mainctivity"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Valid Password"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:id="@+id/et_pw_mainactivity"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1_mainactivity"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:text="Login"
        android:background="@color/white"
        android:id="@+id/btn_login_mainactivity"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l1_mainactivity"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"
        android:text="SignUp"
        android:background="@color/white"
        android:id="@+id/btn_signup_mainactivity"/>

</RelativeLayout>